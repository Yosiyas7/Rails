<h1>Edit Players</h1>

<form action="<%= player_path(@player.id) %>" method="post">
    <label>
        Name:
        <input name="name" required value="<%= @player.player_name %>">
    </label>

    <label>
        country:
        <input name="name" name="country" value="<%= @player.player_country %>">
    </label>

    <label>
        position:
        <input type="name" name="diameter" value="<%= @player.player_position %>">
    </label>

    <label>
        Rating:
        <input type="number" name="country" value="<%= @player.player_country %>">
    </label>

    <label>
        Image:
        <input type="url" name="image" value="<%= @player.player_image %>">
    </label>

    <label>
        Age:
        <input type="number" name="type" value="<%= @player.player_age%>">
    </label>

    <button>Update Player</button>
</form>